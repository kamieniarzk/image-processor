<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/thresholding_cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="3dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:clickable="true"
    android:focusable="true"
    app:cardElevation="1dp"
    app:shapeAppearance="?attr/shapeAppearanceMediumComponent"
    app:cardCornerRadius="12dp"
    app:contentPadding="16dp"
    app:strokeWidth="2dp"
    app:strokeColor="@color/grey"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:animateLayoutChanges="true">
        <TextView
            android:textAlignment="center"
            android:fontFamily="@font/heebo_extra_light"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/marking_label"
            android:scaleType="centerCrop"
            />
        <TextView
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/marking"
            android:scaleType="centerCrop"
            android:layout_margin="8dp"
            />
        <RadioGroup
            android:id="@+id/markingMethodSelector"
            android:checkedButton="@+id/drawContoursButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/drawContoursButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/substitute_color" />
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/draw_contours"/>
        </RadioGroup>
        <TextView
            android:id="@+id/markingMethodDescription"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/substitute_colors_desc"
            android:scaleType="centerCrop"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="12dp"
            />
        <include layout="@layout/substitute_color_layout"/>
        <include layout="@layout/draw_contours_layout"/>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/edge_detection_cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="3dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:clickable="true"
    android:focusable="true"
    app:cardElevation="3dp"
    app:shapeAppearance="?attr/shapeAppearanceMediumComponent"
    app:cardCornerRadius="12dp"
    app:contentPadding="16dp"
    app:strokeWidth="2dp"
    app:strokeColor="@color/grey"
    android:visibility="gone"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:animateLayoutChanges="true">
        <RadioGroup
            android:checkedButton="@+id/sobelThresholding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/sobelThresholding"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/sobel" />
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/canny"/>
        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/sobelLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:animateLayoutChanges="true"
        android:layout_margin="4dp">

    </LinearLayout>
    <LinearLayout
        android:id="@+id/cannyLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:animateLayoutChanges="true"
        android:layout_margin="4dp">

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>